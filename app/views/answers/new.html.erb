<div class="card shadow w-full sm:w-1/2 lg:w-1/3">
  <div class="card-body">
    <div class="text-xl my-4 min-h-[125px]">
      <div class="text-2xl font-thin">Question</div>
      <%= @answer.question.body %>
    </div>

    <hr class="mt-2" />
    <div class="text-2xl font-thin">Answer</div>

    <%= render "form", answer: @answer %>

    <%= link_to 'Back to question', @answer.question, class: "link m-2" %>
  </div>
</div>
