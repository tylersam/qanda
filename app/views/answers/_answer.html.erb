<div id="<%= dom_id(answer) %>" class="my-6 border-b border-b-slate-100">
  <div class="text-xl">
    <%= answer.body %>
  </div>

  <div class="flex flex-row justify-between items-center mb-1">
    <div class="text-xs">
      last updated by 
      <span class="font-bold"><%= answer.user.first_name_last_initial %></span>
      @ <%= answer.updated_at %>
    </div>

    <% if current_user == answer.user %>
      <div class="flex flex-row gap-1 items-end">
        <%= link_to "Edit", edit_question_answer_path(answer.question_id, answer.id), class: "btn btn-xs btn-outline" %>
        <%= button_to question_answer_path(answer.question_id, answer.id),
            method: :delete, 
            class: "btn btn-error btn-outline btn-xs",
            form: { 
              data: { 
                turbo_confirm: "Are you sure you want to delete this answer?"
              } 
            } do %>
          Delete
        <% end %>
      </div>
    <% end %>
  </div>
</div>
