<%= form_with(model: question) do |form| %>
  <div class="form-control my-4">
    <%= form.text_area :body, class: "textarea textarea-bordered w-full", placeholder: "What's on your mind?", rows: 5 %>
  </div>

  <div class="form-control">
    <%= form.submit class: "btn btn-primary w-min" %>
  </div>
<% end %>
